.wrapper
    max-width $content-width; margin 0 auto; padding 0 20px;

.flex
    display flex;

ul
    margin 0; padding 0; list-style none;

button
    background none; appearance none; border none; border-radius 0; padding 0;

img
    display block; max-width 100%; max-height 100%;


*
    font-family: 'Poppins', sans-serif; color $cinza


h2
    color $vermelho; font-size vh(48); margin-bottom vh(80); text-transform uppercase; font-weight $font-semibold; 
    letter-spacing: letterSpacing(50); text-align center;


&::-webkit-scrollbar
    height 6px; width 6px;
&::-webkit-scrollbar-track
    background $vermelho; border-radius 10px
&::-webkit-scrollbar-thumb
    background rgba($vermelho, 0.4); border-radius 10px
