// Header

#header
    position fixed; top 0; width 100%; left 0; z-index 10; padding 15px 30px; background rgba(#efefef, 0.7); backdrop-filter blur(5px)
    display flex; align-items center; justify-content space-between
    h1
        font 0/0 a;
    .menu
        display none;
    .nav
        display flex; gap 30px;
        li
            button
                font-size rem(14); text-transform uppercase; text-decoration none; cursor pointer
                transition all 0.5s ease
                &:hover
                    color $vermelho


+mobile-600()
    #header
        flex-flow row wrap;
        h1
            width 250px
        .menu
            display block
            i
                display block; background $cinza; width 30px; height 3px
                &.first
                    margin-bottom 5px
        .nav
            width 100%; flex-direction column; height 0; overflow hidden; 
            transition all 0.5s ease-in-out; justify-content: center;
            li
                text-align center; 
                button
                    font-size vh(40); text-transform capitalize; 
        &.ativo
            .menu
                i
                    &.first
                        transform: rotate(45deg) translate(3px, 1px)
                    &.second
                        transform: rotate(-45deg) translate(4px, -3px)
            .nav
                height calc(100vh - 73px);