// Header

#header
    position fixed; top 0; width 100%; left 0; z-index 10; padding 15px 30px; background rgba(#efefef, 0.7); backdrop-filter blur(5px)
    display flex; align-items center; justify-content space-between; height 70px
    h1
        font 0/0 a; height 49px; flex-shrink 0
    .menu
        display none;
    .redes
        display flex; gap 15px; justify-content: flex-end; width 280px
        li
            a
                img
                    height 22px
    .nav
        display flex; gap 30px;
        li
            button
                font-size rem(14); text-transform uppercase; text-decoration none; cursor pointer
                transition all 0.5s ease
                &:hover
                    color $vermelho


+mobile-600()
    #header
        flex-flow row wrap; height 70px; transition all 0.5s ease-in-out
        overflow hidden
        .mobile
            display flex; align-items center; justify-content space-between; width 100%; align-self self-start; margin-bottom 15px
        h1
            width 250px; height auto
        .menu
            display block
            i
                display block; background $cinza; width 30px; height 3px
                &.first
                    margin-bottom 5px
        .redes
            justify-content: center; width 100%
        .nav
            width 100%; flex-direction column; overflow hidden
            justify-content: center; height 0;
            li
                text-align center; 
                button
                    font-size vh(40); text-transform capitalize; 
        &.ativo
            height 100vh;
            .nav
                height calc(100% - 105px)
            .menu
                i
                    &.first
                        transform: rotate(45deg) translate(3px, 1px)
                    &.second
                        transform: rotate(-45deg) translate(4px, -3px)